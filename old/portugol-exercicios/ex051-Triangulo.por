programa
{
	
	funcao inicio()
	{
		inteiro n, x, y

		escreva("\nQuantos andares o triângulo vai ter?\n>>> ")
		leia(n)

		para (x =1  ;x <= n ;x++) {
			para (y = 1 ;y <= x ;y++) {
				escreva("#")
			}
			escreva("\n")
		}
	}
}
